<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Update_Concept_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >


        <EditText
            android:id="@+id/update_concept_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="22dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/update_concept_Definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/update_concept_Answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/update_concept_Example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Example if required."
            android:textSize="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textSize="20dp"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:layout_margin="15dp"
            android:onClick="btnUpdate_Quiz"
            />

    </LinearLayout>

</LinearLayout>